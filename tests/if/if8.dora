fun main(): Unit {
  let x = if check()
    ... == false { 1 }
    ... == true { 2 }
    else { -1 };
  assert(x == 2);
}

let mut checked: Int64 = 0;

fun check(): Bool {
  if checked != 0 {
    std::fatalError("fun ran " + checked.toString() + " times!");
  } else {
    checked = checked + 1;
  }
  true
}
