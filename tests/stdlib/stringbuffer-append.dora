fun main() {
    let buf = std::StringBuffer::empty();
    buf.appendChar('a');
    buf.appendChar('b');
    buf.appendChar('c');
    assert(buf.size() == 3i64);
    assert(buf.toString() == "abc");

    buf.append("foo123");
    assert(buf.size() == 9i64);
    assert(buf.toString() == "abcfoo123");
}
