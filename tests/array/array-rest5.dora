fun main() {
    assert(sum_args((1i32, 2i32), (3i32, 4i32)) == 10i32);
    assert(sum_args() == 0i32);
    assert(sum_args((0i32, 1i32)) == 1i32);
}

fun sum_args(x: (Int32, Int32)...): Int32 {
    let mut result = 0i32;
    let mut idx = 0i64;

    while idx < x.size() {
        let elem = x(idx);
        result = result + elem.0 + elem.1;
        idx = idx + 1i64;
    }

    result
}
