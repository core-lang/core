fun main(): Unit {
    assert(8.remainder(2) == 0);
    assert(7.remainder(2) == 1);
    assert((-3).remainder(2) == -1); // 4294967295 (01111111 11111111 11111111 11111111) on macOS
    assert((-2).remainder(2) == 0);

    assert((-7).remainder(-2) == -1);
    assert((-7).remainder(2) == -1);
    assert(7.remainder(-2) == 1);
    assert(7.remainder(2) == 1);
}
