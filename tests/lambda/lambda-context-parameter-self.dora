//= ignore

fun main(): Unit {
    let foo = Foo();
    let f1 = foo.create_lambda();
    assert(f1() === foo);
    assert(f1() !== foo);
    assert(f1() === foo);
    assert(f1() !== foo);
}

class Foo

impl Foo {
    fun create_lambda(): (): Foo {
        let mut step = 0;
        let lambda = ||: Foo {
            let result = if step.remainder(2) == 0 {
                self
            } else {
                Foo()
            };

            step = step + 1;
            result
        };

        lambda
    }
}

