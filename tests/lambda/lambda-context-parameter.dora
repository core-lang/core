fun main(): Unit {
    let f1 = create_lambda(10, 2);
    assert(f1() == 10);
    assert(f1() == 12);
    assert(f1() == 14);
}

fun create_lambda(value: Int64, increment: Int64): (): Int64 {
    let mut value = value;
    let lambda = ||: Int64 {
        let result = value;
        value = value + increment;
        result
    };

    lambda
}
