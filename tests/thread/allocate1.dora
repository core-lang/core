fun main(): Unit {
    let mut i = 0i32;

    while i < 4i32 {
        std::thread::spawn(||: Unit {
            allocator();
            println("done");
        });
        i = i + 1i32;
    }

    allocator();
    println("done");
}

fun allocator(): Unit {
    let mut i = 0i32;

    while i < 10'000i32 {
        Foo();
        i = i + 1i32;
    }
}

class Foo