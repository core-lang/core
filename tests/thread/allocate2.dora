//= output "done\ndone\n"
//= vm-args "--gc-young-size=64M --max-heap-size=128M"

class MyThread() : Thread {
    @override fun run() {
        allocator();
        println("done");
    }
}

fun main() {
    let thread = MyThread();
    thread.start();

    allocator();
    println("done");
}

fun allocator() {
    var i = 1;
    var list = Foo(0, none[Foo]());

    while i < 10_000 {
        list = Foo(i, some[Foo](list));
        i = i + 1;
    }

    i = 10_000;

    while i > 0 {
        i = i - 1;
        assert(list.key == i);
        if list.prev.isSome() {
          list = list.prev.unwrap();
        }
    }
}

class Foo(let key: Int, let prev: Option[Foo])