//= vm-args "--gc=swiper --gc-verify"

fun main() {
  var x = Foo(1, some[Foo](Foo(2, some[Foo](Foo(3, none[Foo]())))));
  forceMinorCollect();
  x.next.value.next.value.next = some[Foo](Foo(4, none[Foo]()));
  x = Foo(100, some[Foo](x));
  forceMinorCollect();
  assert(x.a == 100);
  assert(x.next.value.a == 1);
  assert(x.next.value.next.value.a == 2);
  assert(x.next.value.next.value.next.value.a == 3);
  assert(x.next.value.next.value.next.value.next.value.a == 4);
  assert(x.next.value.next.value.next.value.next.value.next.isEmpty());
}

class Foo(let a: Int, var next: Option[Foo])
