//= vm-args "--gc=swiper --gc-verify"

fun main() {
  let x = Foo(1, none[Foo]());
  forceMinorCollect();
  forceMinorCollect();
  // write into old object x reference to young object
  x.next = some[Foo](Foo(2, none[Foo]()));
  forceMinorCollect();
  assert(x.next.value.a == 2);
}

class Foo(let a: Int, var next: Option[Foo])
