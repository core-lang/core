//= vm-args "--gc=swiper --gc-verify"

fun main() {
  let x = Foo(1, none[Foo]());
  forceMinorCollect();
  x.next = some[Foo](Foo(2, none[Foo]()));
  // Promote x to old generation. Make sure that
  // promoted objects with references to young generations
  // are updated too.
  forceMinorCollect();
  assert(x.next.unwrap().a == 2);
  // Promote Foo(2, none[Foo]()) into old generation and set
  // card to clean again.
  forceMinorCollect();
  assert(x.next.unwrap().a == 2);
}

class Foo(let a: Int, var next: Option[Foo])
