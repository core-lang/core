//= vm-args "--gc-verify"

enum Foo { A(Int32, String, Float32), B }

fun main(): Unit {
    let object = createArray();
    match object(0i64) {
        Foo::A(a, b, c) => unreachable[()](),
        Foo::B => (),
    };
    std::forceCollect();
    match object(0i64) {
        Foo::A(a, b, c) => unreachable[()](),
        Foo::B => (),
    };
    updateArray(object);
    std::forceMinorCollect();
    match object(0i64) {
        Foo::A(a, b, c) => {
            assert(a == 112i32);
            assert(b == "abc");
            assert(c == 17.5f32);
        },
        Foo::B => unreachable[()](),
    }
}

fun createArray(): Array[Foo] {
    Array[Foo]::new(Foo::B)
}

fun updateArray(object: Array[Foo]): Unit {
    object(0i64) = Foo::A(112i32, "abc", 17.5f32);
}
